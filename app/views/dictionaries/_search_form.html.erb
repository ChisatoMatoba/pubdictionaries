<% query_value = params[:query] if params[:model] == model -%>
<%= form_tag '', method: :get do -%>
  <%= text_field_tag :query, query_value -%>
  <%= hidden_field_tag :model, model -%>
  <%= submit_tag 'Search' -%>
  <%= submit_tag 'Clear', id: 'reset' -%>
<% end -%>

<script>
  $("#reset").click(function(){
   $(this).closest('form').find("input[type=text], textarea").val("");
    return false
  });
</script>
