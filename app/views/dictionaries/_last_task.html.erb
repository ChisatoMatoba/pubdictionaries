<% job = @dictionary.jobs.first %>
<fieldset>
  <legend>
		Last task
		<%= link_to('<i class="fa fa-check-square-o fa-lg"></i>'.html_safe, dictionary_job_path(@dictionary.title, job), method: :delete, title: 'Dismiss') unless job.running? %>
  </legend>
	<p>"<%= job.name %>"</p>
  <ul>
	  <% unless job.begun_at.nil? %>
		  <li>started at <%= job.begun_at %></li>
		  <% unless job.ended_at.nil? %>
			  <% if job.message.nil? %>
			    <li>finished at <%= job.ended_at %></li>
			    <li>without problem.</li>
			  <% else %>
			    <li>failed at <%= job.ended_at %></li>
			    <li>with message, "<%= job.message %>".</li>
			  <% end %>
		  <% end %>
	  <% end %>
  </ul>
</fieldset>
