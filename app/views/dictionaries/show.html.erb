<div class="dictionaries_page">

  <% if @base_dic.confirmed_error_messages == true %>
    <!-- Show information about a dictionary -->
    <div class="infobox">
      <fieldset>
        <legend>Dictionary name: <%= @base_dic.title %></legend>

        <%= render 'show_meta_information' %>
        <%= render 'show_export_options' %>
        <%= render 'show_rest_services' %>
      </fieldset>
    </div>
    <br />

    <%= link_to 'Back to list', dictionary_path(@base_dic) -%>

    <table id='expressions' style="margin-top: 1em;">
      <tr style="vertical-align: top">
        <th class="expression">
          Expression<br />
          <%= render partial: 'dictionaries/search_form', locals: {model: 'expression'} -%>
        </th>
        <th class="uri">
         Id 
          <%= render partial: 'dictionaries/search_form', locals: {model: 'uri'} -%>
        </th>
      </tr>
    </table>
    <% if @expressions.present? -%>
      <%= render partial: 'expressions/expression', collection: @expressions -%>
    <% else -%>
      <%= render partial: 'uris/uri', collection: @uris -%>
    <% end -%>

    <!-- Show a list of (original) entries -->
    <% if not @base_dic.entries.empty? %>
      <%= render 'show_entries' %>
    <% end %>
    <br />
  <% else %>
    <div class="infobox">
      <%= render 'show_error_messages' %>
    </div>
    <br />
  <% end %>

  <%= link_to 'Back', dictionaries_path %>

</div>