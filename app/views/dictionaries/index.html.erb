<h1>Dictionaries</h1>
<div class="wice-grid">
  <%= 
    dump_filter_parameters_as_hidden_fields(@dictionaries_grid)

    grid(@dictionaries_grid, html: {class: "my-grid"}, hide_submit_button: true, hide_reset_button: true ) do |g|
      g.blank_slate do
        "No dictionary." 
      end

      g.column name: "Name", attribute: "name" do |dic|
        link_to dic.name, dic
      end

      g.column name: "Language", attribute: "language" do |dic| 
        dic.language
      end

      g.column name: "Size", attribute: "entries_num", filter: false do |dic| 
        dic.entries_num
      end

      g.column name: "Created By", attribute: "user_id", filter: false do |dic| 
        dic.user.email
      end

      g.column name: "Created At", attribute: "created_at", filter: false do |dic| 
        dic.created_at
      end
    end
  %>
</div>


<%= button_to('Create a New Dictionary', new_dictionary_path, :method => :get, :class => "button") unless current_user.nil? %>


