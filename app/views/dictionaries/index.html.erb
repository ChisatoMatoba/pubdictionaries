<div class="wice-grid">
  <%= 
    dump_filter_parameters_as_hidden_fields(@dictionaries_grid)

    grid(@dictionaries_grid, html: {class: "my-grid"}, header_tr_html: {class: "my-header"}, hide_submit_button: true, hide_reset_button: true ) do |g|
      g.blank_slate do
        "No dictionary." 
      end

      g.column name: "Name", attribute: "title" do |dic| 
        link_to dic.title, dic
      end

      g.column name: "Language", attribute: "language" do |dic| 
        dic.language
      end

      g.column name: "Size", attribute: "entries_count", filter: false do |dic| 
        dic.entries_count
      end

      g.column name: "Created At", attribute: "created_at", filter: false do |dic| 
        dic.created_at
      end
    end
  %>
</div>

  <!-- 2. Buttons -->
  <div style="float:left;">
    <%= button_to 'Create a New Dictionary', new_dictionary_path, {:method => :get, :class => "customized_button"} %>
  </div>
